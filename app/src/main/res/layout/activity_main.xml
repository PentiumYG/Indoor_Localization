<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

<!--    Accelerometer Design -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="15dp">

        <TextView
            android:id="@+id/accelometerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accelerometer Data"
            android:textSize="24dp">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/accX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="X-axis"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/accY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Y-axis"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/accZ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Z-axis"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_margin="10dp"/>

        </LinearLayout>

    </LinearLayout>

    <!--    Magnetometer Design -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="15dp">

        <TextView
            android:id="@+id/magnetometerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Magnetometer Data"
            android:textSize="24dp">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/magX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="X-axis"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/magY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Y-axis"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/magZ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Z-axis"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_margin="10dp"/>

        </LinearLayout>


    </LinearLayout>
<!--    Input data  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/heightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Enter your height in cm"
            android:textSize="24dp"
            android:textAlignment="center"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/heightInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:textSize="24dp"
            android:inputType="textPersonName"
            android:hint="Height in cm"
            android:text="0"
            android:layout_margin="10dp"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">


        <TextView
            android:id="@+id/genderInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="24dp"
            android:text="Select your gender"
            android:padding="5dp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:id="@+id/rgroup">

            <RadioButton
                android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Male" />

            <RadioButton
                android:id="@+id/female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Female" />
        </RadioGroup>

    </LinearLayout>

<!--  Stride Length  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/strideText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Stride Length"
            android:textSize="24dp"
            android:textAlignment="center"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/stride"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Stride Length"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_margin="10dp"/>
    </LinearLayout>



    <!--    Steps Calculator  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/stepText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Steps"
            android:textSize="24dp"
            android:textAlignment="center"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Total Steps"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_margin="10dp"/>
    </LinearLayout>

    <!--   Direction Calculator  -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/DirectionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Direction in Degrees"
            android:textSize="24dp"
            android:textAlignment="center"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/degrees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Degrees"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_margin="10dp"/>
    </LinearLayout>

<!--    Distance Calculator  -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/DistanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Distance in km"
            android:textSize="24dp"
            android:textAlignment="center"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Distance"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_margin="10dp"/>
    </LinearLayout>





</LinearLayout>