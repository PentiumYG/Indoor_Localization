                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="20dp"
                                android:text="Click Here"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-smallcaps"
                                android:textColor="@color/white"/>


                        </LinearLayout>

        </LinearLayout>


